<view class="page" bind:__l="__l"><view class="article-title">{{''+article.articleTitle+''}}</view><scroll-view class="options-tab" scroll-x="true"><block wx:for="{{article.tagList}}" wx:for-item="tag" wx:for-index="__i0__" wx:key="tagId"><view class="small-tab">{{''+tag.tagName+''}}</view></block></scroll-view><view class="blog-info"><view class="info-time"><image class="info-image" src="../../static/img/time.png"></image>{{article.articleUpdateTime}}</view><view class="info-time"><image class="info-image" src="../../static/img/fangke.png"></image>{{article.articleViewCount}}</view><view class="info-time"><image class="info-image" src="../../static/img/dianzan.png"></image>{{article.articleGiveCount}}</view><view class="info-time"><image class="info-image" src="../../static/img/pinglun.png"></image>{{article.articleCommentCount}}</view></view><view class="line"></view><view class="content _div"><u-parse content="{{article.articleContent}}" data-event-opts="{{[['^preview',[['preview']]],['^navigate',[['navigate']]]]}}" bind:preview="__e" bind:navigate="__e"></u-parse></view><view class="textbox-Like"><view data-event-opts="{{[['tap',[['addlike',['$event']]]]]}}" class="textLike" bindtap="__e">收藏一下</view><view data-event-opts="{{[['tap',[['addgive',['$event']]]]]}}" class="textLike" bindtap="__e">点赞</view></view><view class="line"></view><view class="pinglun"><view class="pinglun-count"><view class="count-logo"><image class="logo-pinglun" src="../../static/img/dian.png"></image></view>{{'共'+article.articleCommentCount+'条评论'}}</view><view class="lines"></view><block wx:for="{{comments}}" wx:for-item="comment" wx:for-index="__i1__" wx:key="commentId"><view class="user-pinglun"><view class="user-logo"><image class="user-img" src="{{comment.wechatUser.userImg}}"></image></view><view class="username"><view>{{comment.wechatUser.userName}}</view><view class="time">{{comment.commentTime+''}}<block wx:if="{{comment.wechatUser.userName==nickName}}"><text data-event-opts="{{[['tap',[['deleteComment',['$0'],[[['comments','commentId',comment.commentId,'commentId']]]]]]]}}" class="deletetext" style="float:right;" bindtap="__e">删除</text></block></view></view><view class="user-content">{{comment.commentContent}}</view><view class="blog-info"><view class="lines"></view></view></view></block></view><view class="buttom"></view><view class="add-pinglun"><image class="me-img" src="{{avatarUrl}}"></image><view class="search-block"><view class="search-ico-wapper"><image class="search-ico" src="../../static/img/pinglun.png"></image></view><input class="search-text" placeholder="请留下你的评论" data-event-opts="{{[['input',[['__set_model',['$0','commentContent','$event',[]],['']]]]]}}" value="{{commentContent}}" bindinput="__e"/></view><view class="add-button"><button size="mini" type="primary" data-event-opts="{{[['tap',[['addComment',['$event']]]]]}}" bindtap="__e">发送</button></view></view></view>